@page "/mutual_induction"
@inject HttpClient Http

<h3>Mutual inductions</h3>

<body>    

    <table id="mutuals" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>@L["firstBranch"]</th>
                <th>@L["secondBranch"]</th>
                <th>R, [@L["Om"]]</th>                     
                <th>X, [@L["Om"]]</th>                     
            </tr>
        </thead>
        <tbody>
            @foreach (var elem in grid.Mutuals)
            {
                <tr>
                    <td>@elem.Value.Id</td>
                    <td>@grid.Branches[elem.Value.IdFirstBranch]</td>
                    <td>@grid.Branches[elem.Value.IdSecondBranch]</td>                        
                    <td>@elem.Value.R</td>
                    <td>@elem.Value.X</td>
                </tr>
            }
        </tbody>
    </table>
</body>

@code {
    Grid grid = new Grid();
}