@layout MainLayout
@page "/Disclaimer"
@inject HttpClient Http
@inject Toolbelt.Blazor.I18nText.I18nText I18nText

<div class="container-fluid" style="text-align:justify;">
    <h1>@Localizer.Header</h1>
    <p>@Localizer.p1</p>
    <p>@Localizer.p2</p>
    <p>@Localizer.p3</p>
    <p>@Localizer.p4</p>
    <p>@Localizer.p5</p>
    <p>@Localizer.p6</p>
</div>

@code {    //Localizator 
    I18nText.Pages.Disclaimer Localizer = new I18nText.Pages.Disclaimer();

    protected override async Task OnInitializedAsync()
    {
        Localizer = await I18nText.GetTextTableAsync<I18nText.Pages.Disclaimer>(this);
    }

}