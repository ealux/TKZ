@using System.Globalization
@inject Toolbelt.Blazor.I18nText.I18nText I18nText

<div class="my_sidebar mh-100 d-flex flex-column mh-100">
    <!--sidebar-->
    <div class="nav flex-column nav-pills mh-100" style="flex: 1;">
        <NavLink class="nav-link" href="/" Match="NavLinkMatch.All" ActiveClass="active">
            <img class="menu-icon" src="img/home.svg">@Localizer.Navs_HomeBut
        </NavLink>
        <NavLink class="nav-link" href="/nodes" Match="NavLinkMatch.All" ActiveClass="active">
            <img class="menu-icon" src="img/node.svg">@Localizer.Navs_NodeBut
        </NavLink>
        <NavLink class="nav-link" href="/branches" Match="NavLinkMatch.All" ActiveClass="active">
            <img class="menu-icon" src="img/branch.svg">@Localizer.Navs_BranchBut
        </NavLink>
        <NavLink class="nav-link" href="/mutual_induction" Match="NavLinkMatch.All" ActiveClass="active">
            <img class="menu-icon" src="img/mutual_induction.svg">@Localizer.Navs_MutBut
        </NavLink>
        <NavLink class="nav-link" href="/calc" Match="NavLinkMatch.All" ActiveClass="active">
            <img class="menu-icon" src="img/thunder.svg">@Localizer.Navs_CalcBut
        </NavLink>
        <NavLink class="nav-link" href="/adv" Match="NavLinkMatch.All" ActiveClass="active">
            <img class="menu-icon" src="img/reading.svg">@Localizer.Navs_AdvBut
        </NavLink>
        <NavLink class="nav-link" href="/contacts" Match="NavLinkMatch.All" ActiveClass="active">
            <img class="menu-icon" src="img/contact.svg">@Localizer.Navs_ContactBut
        </NavLink>
    </div>
</div>

@code {

    //Localizator
    I18nText.Shared.Navs Localizer = new I18nText.Shared.Navs();

    protected override async Task OnInitializedAsync()
    {
        Localizer = await I18nText.GetTextTableAsync<I18nText.Shared.Navs>(this);
    }

}