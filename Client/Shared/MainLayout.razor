@inherits LayoutComponentBase
@using TKZ.Client.Pages.Log
@inject LogBase LB

<div class="container main_container d-block mh-100" style="flex: 1;">

    <TKZ.Client.Shared.Header.Header LogOpenEvent="LogCollapser" @ref="HeaderRef"/>


    <div class="d-flex" style="flex: 1;height:90vh;">
        <Navs />
        <div class="d-flex flex-column h-100 mh-100" style="flex: 1;">
            <!--main area-->
            <div class="main-area">
                @Body
            </div>
            <!--log-->
            <TKZ.Client.Shared.Footer.Footer />
        </div>
        <div class="d-flex flex-column h-100 mh-100">
            <TKZ.Client.Pages.Log.Log LogChangeEvent="LogChange" Collapse="LogCollapse" />
        </div>
    </div>
</div>
@code{

    Header.Header HeaderRef = new Header.Header();

    private bool LogCollapse;

    void LogCollapser()
    {
        LogCollapse = !LogCollapse;
        StateHasChanged();
    }

    void LogChange()
    {
        StateHasChanged();
    }
}